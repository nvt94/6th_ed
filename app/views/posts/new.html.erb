<h1>New Post</h1>

<%= form_with model: @post, id: :custom_id, class: :custom_class, local: true do |form| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% @post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :user_id %>
    <%= form.number_field :user_id %>
  </div>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>

  <div class="field">
    <%= form.label :published %>
    <%= form.check_box :published %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.number_field :status %>
  </div>

  <div class="field">
    <%= form.label :color %>
    <%= form.text_field :color %>
    <%= form.time_zone_select :time_zone %>
    <!-- collection_select -->
    <!-- collection_radio_buttons -->
    <!-- collection_check_boxes -->
    <!-- <%#= form.fields_for color, index: color.id do |color_form| %>
      <%#= color_form.text_field :city %>
    <%# end %> -->
  </div>

  <%=
    collection_check_boxes(:post, :color, [[1, 2]], :first, :second) do |b|
      b.label{ b.check_box }
    end
  %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>


<%= link_to 'Back', posts_path %>
